# See https://cloud.google.com/appengine/docs/standard/go/config/appref
version: 1
runtime: go
api_version: go1.9
service: dev-bot

handlers:
- url: /.*
  script: _go_app

nobuild_files:
- vendor/
- .git/

skip_files:
- vendor/
- .git/

env_variables:
<%-
envs = %w[
  GITHUB_AUTH_TOKEN
  TARGET_SLACK_TEAM
  TARGET_GITHUB_ORG
  TARGET_GITHUB_REPO
  SLACK_OAUTH_ACCESS_TOKEN
]
envs.each do |env_name| -%>
  <%= env_name %>: <%= ENV[env_name] or raise "$#{env_name} is required" %>
<%- end -%>
